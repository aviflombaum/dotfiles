# ═══════════════════════════════════════════════════════════════
# ANALYTICS & MONITORING
# ═══════════════════════════════════════════════════════════════

# Google Analytics
# Get from: https://analytics.google.com/
GA_TRACKING_ID="UA-..."
GA4_MEASUREMENT_ID="G-..."

# Sentry (Error Tracking)
# Get from: https://sentry.io/settings/
SENTRY_DSN="https://...@sentry.io/..."

# DataDog
# Get from: https://app.datadoghq.com/organization-settings/api-keys
DATADOG_API_KEY="..."
DATADOG_APP_KEY="..."

# ═══════════════════════════════════════════════════════════════
# AUTHENTICATION & SECURITY
# ═══════════════════════════════════════════════════════════════

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-super-secret-jwt-key"

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET="your-session-secret"

# Encryption Key
ENCRYPTION_KEY="your-encryption-key"

# OAuth Providers
GOOGLE_CLIENT_ID="..."
GOOGLE_CLIENT_SECRET="..."

FACEBOOK_APP_ID="..."
FACEBOOK_APP_SECRET="..."

TWITTER_API_KEY="..."
TWITTER_API_SECRET="..."

# ═══════════════════════════════════════════════════════════════
# DEVELOPMENT TOOLS
# ═══════════════════════════════════════════════════════════════

# Docker Registry
DOCKER_REGISTRY_URL="docker.io"
DOCKER_USERNAME="username"
DOCKER_PASSWORD="password"

# npm Registry Token
NPM_TOKEN="..."

# Homebrew GitHub Token (for higher rate limits)
HOMEBREW_GITHUB_API_TOKEN="..."

# ═══════════════════════════════════════════════════════════════
# APPLICATION SETTINGS
# ═══════════════════════════════════════════════════════════════

# Application Environment
NODE_ENV="development"  # development, staging, production
RAILS_ENV="development"
APP_ENV="development"

# Application URLs
APP_URL="http://localhost:3000"
API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:5000"

# Feature Flags
ENABLE_DEBUG="true"
ENABLE_ANALYTICS="false"
ENABLE_CACHE="true"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15m"

# ═══════════════════════════════════════════════════════════════
# EXTERNAL SERVICES
# ═══════════════════════════════════════════════════════════════

# Weather API
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY="..."

# Maps
# Get from: https://developers.google.com/maps
GOOGLE_MAPS_API_KEY="..."

# Image Processing
# Get from: https://cloudinary.com/
CLOUDINARY_URL="cloudinary://..."

# ═══════════════════════════════════════════════════════════════
# CUSTOM VARIABLES
# ═══════════════════════════════════════════════════════════════

