  export EDITOR='vim'
else
  # Choose your preferred editor:
  # export EDITOR="code -w"      # VS Code
  # export EDITOR="subl -w"      # Sublime Text
  # export EDITOR="zed -w"       # Zed
  # export EDITOR="nvim"         # Neovim
